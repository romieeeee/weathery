<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_radius_list"
    tools:context=".view.ListFragment">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="30dp"
            android:src="@drawable/vector" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="83dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/city_list_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pre_regular"
                android:text="서울특별시 장충동2가"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_city_temp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/pre_light"
                android:text="현재 기온: 20℃"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_city_weather"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="end|center"
            android:layout_marginEnd="30dp"
            android:src="@drawable/ic_unknown" />
</FrameLayout>